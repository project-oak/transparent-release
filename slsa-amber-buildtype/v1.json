{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Amber SLSA buildType",
  "description": "This schema describes the Amber SLSA buildType. It can be used to test whether a given SLSA predicate follows this buildType. It does not test compliance to the SLSA spec itself.",
  "$defs": {
    "buildType": {
      "const": "https://github.com/project-oak/transparent-release/amber-slsa-buildtype/v1.json"
    },
    "buildConfig": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "description": "Command passed to the builder image."
        },
        "outputPath": {
          "type": "string",
          "description": "The path, relative to the root of the git repository, where the artifact built by the command is expected to be found."
        },
        "expectedArtifactDigest": {
          "type": "object",
          "description": "in-toto DigestSet, ref https://github.com/in-toto/attestation/blob/fd7a32c1e6102061a98e10111b0c612f7abcc5b8/spec/field_types.md#DigestSet",
          "properties": {
            "sha256": {
              "type": "string"
            }
          },
          "required": [
            "sha256"
          ]
        }
      },
      "required": [
        "command",
        "outputPath"
      ],
      "additionalProperties": false
    },
    "materials": {
      "type": "array",
      "items": [
        {
          "title": "Docker Builder Image",
          "type": "object",
          "properties": {
            "uri": {
              "type": "string",
              "description": "URI of a Docker image on a registry"
            },
            "digest": {
              "type": "object",
              "description": "in-toto DigestSet, ref https://github.com/in-toto/attestation/blob/fd7a32c1e6102061a98e10111b0c612f7abcc5b8/spec/field_types.md#DigestSet",
              "properties": {
                "sha256": {
                  "type": "string"
                }
              },
              "required": [
                "sha256"
              ]
            }
          },
          "required": [
            "uri",
            "digest"
          ]
        },
        {
          "title": "Git Source Remote",
          "type": "object",
          "properties": {
            "uri": {
              "type": "string",
              "description": "URI of a git remote"
            },
            "digest": {
              "type": "object",
              "description": "The specific commit hash to checkout. in-toto DigestSet, ref https://github.com/in-toto/attestation/blob/fd7a32c1e6102061a98e10111b0c612f7abcc5b8/spec/field_types.md#DigestSet",
              "properties": {
                "sha1": {
                  "type": "string"
                }
              },
              "required": [
                "sha1"
              ]
            }
          },
          "required": [
            "uri",
            "digest"
          ]
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "predicateType": {
      "const": "https://slsa.dev/provenance/v0.2"
    },
    "predicate": {
      "type": "object",
      "properties": {
        "buildType": {
          "$ref": "#/$defs/buildType"
        },
        "buildConfig": {
          "$ref": "#/$defs/buildType"
        },
        "materials": {
          "$ref": "#/$defs/buildType"
        }
      }
    }
  }
}
